using Cafe.Models;
using Cafe.Serivces;
using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;
using System.Web;
using System.Web.Mvc;

namespace Cafe.Controllers
{
    public class EmailsController : Controller
    {

        public ActionResult SendEmail()
        {
            return View(new EmailSenderViewModel());
        }


        [HttpPost]
        public ActionResult SendEmail(EmailSenderViewModel se)
        {
            if (ModelState.IsValid)
            {
                try
                {
                    string email = se.Email;
                    string subject = se.Subject;
                    string content = se.Content;

                    var attachment = Request.Files["attachment"];
                    if (attachment.ContentLength > 0)
                        // with attachment
                    {
                        String path = Path.Combine(Server.MapPath("~/Attachment"), attachment.FileName);
                        attachment.SaveAs(path);
                        EmailSender es = new EmailSender();
                        es.NewSend(email, subject, content, path, attachment.FileName);
                    }
                    else
                         // no attachment
                    {
                        EmailSender es = new EmailSender();
                        es.Send(email, subject, content);
                    }                    

                    ViewBag.Result = "Email has been send.";
                    return View(new EmailSenderViewModel());
                }
                catch
                {
                    return View();
                }
            }
            return View();
        }

    }
}
